doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario
            h1   Restablece tu contraseña      
            
            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class= `${categoria}`)
                                p= error

            form#formulario.caja.caja-login(method="POST")
                .campo
                    label(for="password") Contraseña
                    input(type="password" name="password" placeholder="Nueva contraseña" required value=email)
                
                .campo.enviar
                    input.boton(type="submit" value="Restablecer")
                
                    